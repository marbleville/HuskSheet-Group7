/**
 * SQL statement that returns all of the publishers
 * @author {hunterbrodie}
 */
SELECT username FROM publishers;


/**
 * SQL statement returns all the sheets associated with a given username
 * @author {hunterbrodie}
 */
SELECT sheets.sheetid, sheets.sheetname
FROM sheets
INNER JOIN publishers ON sheets.owner=publishers.userid
WHERE publishers.username='hunter';

/**
 * SQL statement that returns all updates associated with a sheet
 * @author {hunterbrodie}
 */
SELECT updates.*
FROM updates
INNER JOIN sheets ON updates.sheet=sheets.sheetid
WHERE sheets.sheetid=2;

/**
 * SQL statement that returns all subscribers associated with a sheet
 * @author {hunterbrodie}
 */
SELECT publishers.username
FROM sheets
INNER JOIN subscribers ON sheets.sheetid=subscribers.sheet
INNER JOIN publishers ON subscribers.sub=publishers.userid
WHERE sheets.sheetid=2;
